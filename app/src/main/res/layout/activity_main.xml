<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center"
  tools:context=".main.MainActivity">

  <TextView
    android:id="@+id/startLabelTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="@dimen/small_text_size"
    android:text="@string/start_label"/>

  <TextView
    android:id="@+id/startValueTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/default_text_size"
    android:layout_marginTop="@dimen/small_margin"
    tools:text="19:43:11"/>

  <TextView
    android:id="@+id/finishLabelTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="@dimen/small_text_size"
    android:layout_marginTop="@dimen/default_margin"
    android:text="@string/finish_label"/>

  <TextView
    android:id="@+id/finishValueTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/default_text_size"
    android:layout_marginTop="@dimen/small_margin"
    tools:text="19:43:15"/>

  <ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/large_margin"
    android:visibility="invisible"
    tools:visibility="visible"/>

  <Button
    android:id="@+id/sequentialButton"
    android:layout_width="@dimen/width_button"
    android:layout_height="wrap_content"
    android:text="@string/sequential_label"/>

  <Button
    android:id="@+id/parallelButton"
    android:layout_width="@dimen/width_button"
    android:layout_height="wrap_content"
    android:text="@string/parallel_label"/>

</LinearLayout>